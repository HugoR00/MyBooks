<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailsFragment"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageview_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@+id/textview_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_title"
        />
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_back"
        android:gravity="center"
        android:text="Título"
        android:textSize="28dp"
        />

    <TextView
        android:id="@+id/textview_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_title"
        app:layout_constraintStart_toStartOf="@id/imageview_back"
        android:layout_marginTop="16dp"
        android:text="Autor"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/textview_author_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_author"
        app:layout_constraintStart_toStartOf="@id/textview_author"
        android:layout_marginTop="8dp"
        android:text="Autor do livro"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/textview_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_author_value"
        app:layout_constraintStart_toStartOf="@id/textview_author_value"
        android:layout_marginTop="32dp"
        android:text="Gênero"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textview_genre_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/rounded_label_generic"
        app:layout_constraintTop_toBottomOf="@id/textview_genre"
        app:layout_constraintEnd_toStartOf="@id/textview_genre_value"
        android:text="Romance"

        />

    <TextView
        android:id="@+id/textview_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_genre_value"
        app:layout_constraintStart_toStartOf="@id/textview_genre_value"
        android:layout_marginTop="40dp"
        android:text="Este livro é um dos seus favoritos?"
        android:textSize="20dp"
        />
    <CheckBox
        android:id="@+id/checkbox_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textview_favorite"
        app:layout_constraintTop_toBottomOf="@id/textview_genre_value"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:backgroundTint="@color/light_red"
        android:text="REMOVER LIDO"


        />

</androidx.constraintlayout.widget.ConstraintLayout>